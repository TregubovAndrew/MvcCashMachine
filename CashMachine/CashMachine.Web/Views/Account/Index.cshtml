@model CashMachine.Web.Models.CardNumberViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Введите номер карточки</h2>
<div class="col-sm-4">
    <div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.EditorFor(m => m.CardNumber, new {htmlAttributes = new {@class = "form-control", @readonly = "true"}})
            @Html.Partial("Keyboard", "CardNumber")
            @Html.ValidationMessageFor(m => m.CardNumber, "", new {@class = "text-danger"})
        }
    </div>
</div>

<script>
    $('.js-input-number').click(function () {
        inputForKeys($('#CardNumber'), $(this).attr('value'), $maxLengthForCardNumber);
    });
</script>
